<UserControl x:Class="DistrictEnergy.Views.ResultViews.Costs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:viewModels="clr-namespace:DistrictEnergy.ViewModels"
             xmlns:districtEnergy="clr-namespace:DistrictEnergy"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModels:CostsViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.15*" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>

        </Grid.Resources>
        <StackPanel Grid.Column="1" Background="#4CFFFFFF" Height="auto" VerticalAlignment="Top">
            <StackPanel.Resources>
                <districtEnergy:DollarConverter x:Key="DollarConverter" />
                <districtEnergy:CostConverterUnit x:Key="CostConverterUnit" />
                <districtEnergy:NormalizedCostConverterUnit x:Key="NormalizedCostConverterUnit" />
            </StackPanel.Resources>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Foreground="Black" FontSize="12" HorizontalAlignment="Center" Grid.ColumnSpan="2">Total</TextBlock>
                <TextBlock Foreground="Black" FontSize="12" HorizontalAlignment="Center"
                           Text="{Binding TotalCost, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DollarConverter}}"
                           Grid.Row="1" Grid.Column="0" />
                <TextBlock Foreground="Black" FontSize="8" HorizontalAlignment="Center"
                           Text="{Binding TotalCost, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CostConverterUnit}}"
                           Grid.Row="2" Grid.Column="0"/>
                <TextBlock Foreground="Black" FontSize="12" HorizontalAlignment="Center"
                           Text="{Binding NormalizedTotalCost, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DollarConverter}}"
                           Grid.Row="1" Grid.Column="1" />
                <TextBlock Foreground="Black" FontSize="8" HorizontalAlignment="Center"
                           Text="{Binding NormalizedTotalCost, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NormalizedCostConverterUnit}}"
                           Grid.Row="2" Grid.Column="1" />
            </Grid>
        </StackPanel>
        <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Left" Grid.ColumnSpan="2"
                            Grid.Column="0">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Current Simulation Results" Labels="{Binding Labels}" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Cost by Fuel Source" LabelFormatter="{Binding Formatter}" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>