                    <converters:DollarConverter x:Key="DollarConverter" />
                    <converters:CostConverterUnit x:Key="CostConverterUnit" />
                    <converters:NormalizedCostConverterUnit x:Key="NormalizedCostConverterUnit" />
                    <converters:AreaConverter x:Key="AreaConverter" />
                    <converters:AreaConverterUnit x:Key="AreaConverterUnit" />
                    <converters:KWConverter x:Key="KwConverter" />
                    <converters:KWConverterUnit x:Key="KwConverterUnit" />
                    <converters:KwPerHourConverter x:Key="KwPerHourConverter" />
                    <converters:KwPerHourConverterUnit x:Key="KwPerHourConverterUnit" />
                    <converters:KWhConverter x:Key="KWhConverter" />
                    <converters:KWhConverterUnit x:Key="KWhConverterUnit" />
                </Grid.Resources>
                <TextBlock Text="UserDefined" Grid.Column="1" Grid.ColumnSpan="2" />
                <TextBlock Text="Computed" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" />
                <StackPanel Margin="2,0" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Cooling capacity of absorption chillers" />
                    <TextBlock Text="Capacity of Electrical Heat Pumps" />
                    <TextBlock Text="Capacity of Battery"
                               ToolTip="Capacity of Battery, defined as the average demand times the desired autonomy" />
                    <TextBlock Text="Capacity of Hot Water Tank" />
                    <TextBlock Text="Electricity Output Capacity of CHP plant" />
                    <TextBlock Text="Heating Output Capacity of CHP plant"
                               ToolTip=" Capacity of CHP plant in hot water production (max over the year)" />
                    <TextBlock Text="Natural Gas Boiler Capacity" />
                    <TextBlock Text="Capacity of the solar hot water array" />
                    <TextBlock Text="Capacity of the Electric Chiller" />
                    <TextBlock Text="Peak Grid Electricity Demand" />
                    <TextBlock Text="Capacity of the PV array" />
                    <TextBlock Text="Capacity of the wind turbine field" />
                    <TextBlock Text="Required Solar Thermal Panel Area" />
                    <TextBlock Text="Required PV Collectors Area" />
                    <TextBlock Text="Number of Wind Turbines"
                               ToolTip="Number of turbines needed: Annual electricity needed divided by how much one turbine generates. [Annual Energy that needs to be generated/(0.635 x Rotor Area X sum of cubes of all wind speeds within cut-in and cut-out speeds x COP)]" />
