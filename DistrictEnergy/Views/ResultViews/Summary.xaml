                </StackPanel>
                <StackPanel Margin="2,0" Grid.Row="1" Grid.Column="3">
                    <TextBlock Text="{Binding ModelCoolingEnergy, Converter={StaticResource KWhConverter}}"></TextBlock>
                    <TextBlock Text="{Binding ModelHeatingEnergy, Converter={StaticResource KWhConverter}}"></TextBlock>
                    <TextBlock Text="{Binding ModelElectricityEnergy, Converter={StaticResource KWhConverter}}"></TextBlock>
                </StackPanel>
