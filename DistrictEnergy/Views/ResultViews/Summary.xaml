                    <TextBlock Text="{Binding CapElecProj, Converter={StaticResource KwConverter}}" />
                    <TextBlock Text="{Binding CapPv, Converter={StaticResource KWhConverter}}" />
                    <TextBlock Text="{Binding CapWnd, Converter={StaticResource KWhConverter}}" />
                    <TextBlock Text="{Binding AreaShw, Converter={StaticResource AreaConverter}}" />
                    <TextBlock Text="{Binding AreaPv, Converter={StaticResource AreaConverter}}" />
                    <TextBlock Text="{Binding NumWnd}" />
                    <TextBlock Text="{Binding ChgrHwt, Converter={StaticResource KwPerHourConverter}}" />
                    <TextBlock Text="{Binding ChgrBat, Converter={StaticResource KwPerHourConverter}}" />
                    <TextBlock Text="{Binding DchgrHwt, Converter={StaticResource KwPerHourConverter}}" />
                    <TextBlock Text="{Binding DchgBat, Converter={StaticResource KwPerHourConverter}}" />
                </StackPanel>
                <StackPanel x:Name="UserUnits" Margin="2,0" Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="{Binding CapAbs, Converter={StaticResource KwConverterUnit}}" />
                    <TextBlock Text="{Binding CapEhp, Converter={StaticResource KwConverterUnit}}" />
                    <TextBlock Text="{Binding CapBat, Converter={StaticResource KwConverterUnit}}" />
                    <TextBlock Text="{Binding CapHwt, Converter={StaticResource KwConverterUnit}}" />
                    <TextBlock Text="{Binding CapChpElec, Converter={StaticResource KwConverterUnit}}" />
