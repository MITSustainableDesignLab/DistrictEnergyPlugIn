                    <TextBlock Text="{Binding AreaPv, Converter={StaticResource AreaConverterUnit}}" />
                    <TextBlock Text="#" />
                    <TextBlock Text="{Binding ChgrHwt, Converter={StaticResource KwPerHourConverterUnit}}" />
                    <TextBlock Text="{Binding ChgrBat, Converter={StaticResource KwPerHourConverterUnit}}" />
                    <TextBlock Text="{Binding DchgrHwt, Converter={StaticResource KwPerHourConverterUnit}}" />
                    <TextBlock Text="{Binding DchgBat, Converter={StaticResource KwPerHourConverterUnit}}" />
                </StackPanel>
                <StackPanel Grid.Column="3" Margin="2,0" Grid.Row="1">
                    <TextBlock Text="{Binding ModelCapAbs, Converter={StaticResource KwConverter}}" />
                    <TextBlock Text="{Binding ModelCapEhp, Converter={StaticResource KwConverter}}" />
                    <TextBlock Text="{Binding ModelCapBat, Converter={StaticResource KwConverter}}" />
                    <TextBlock Text="{Binding ModelCapHwt, Converter={StaticResource KwConverter}}" />
                    <TextBlock Text="{Binding ModelCapChpElec, Converter={StaticResource KwConverter}}" />
                    <TextBlock Text="{Binding ModelCapChpHeat, Converter={StaticResource KwConverter}}" />
